// Prisma schema for Orion CRM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id          String    @id @default(uuid())
  name        String
  industry    String?
  website     String?
  description String?
  contacts    Contact[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Contact {
  id             String        @id @default(uuid())
  firstName      String
  lastName       String
  email          String        @unique
  phone          String?
  position       String?
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}
